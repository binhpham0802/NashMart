@model IEnumerable<NashMart.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="card-group">
    @foreach (var product in Model)
    {
        <div class="card">
            <img src="https://didongmoi.com.vn/site/pictures/products/iphone-13-512gb_fbe.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@product.Name</h5>
                <p class="card-text">Đây là sản phảm được mong chờ nhất 2021.</p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
        </div>
    }
</div>